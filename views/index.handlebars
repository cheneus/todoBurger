<h1 class="jumbotron text-center">Grand Burger To Eat List?</h1>
<!-- <h3 class="bg-info rounded p-4 text-center">Save the burger you need to get to later</h3> -->
<div id="burgerEntry" class="row">
  <div id="readyToBe" class="col-md-6">
    <div class="card">
      <h4 class="card-header">Cant Wait to be eaten</h4>
      <div class="card-block pt-2">
        <ul>
          {{#each burgers}} {{#unless this.devoured}}
          <li>
            <label data-burger={{this.id}} class="form-control-label"> {{this.burger_name}}
              <button class='btn btn-success eat'>Nom</button>
              <button class='btn btn-danger delete'>x</button>
            </label>
          </li>
          {{/unless}} {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div id="eaten" class="col-md-6">
    <h4>Goodbye World</h4>
    <ul>
      {{#each burgers}} {{#if this.devoured}}
      <li>
       <label>{{this.burger_name}}
          <button class='btn btn-default'>x</button>
        </label>
      </li>
      {{/if}} {{/each}}
    </ul>
  </div>
</div>
<div class="row my-2">
  <div class="col ">
    <form action="/" method="POST">
      <div class="form-group">
        <label for="addBurger">Add a new burger to your eating list!</label>
        <input type="text" id="addBurger" name="burger_name" class="form-control">
      </div>
      <button class="btn btn-primary" type="submit">Submit</button>
    </form>
  </div>
</div>
